@{
    ViewData["Title"] = "Create";
}

@* mostrar mensaje de error *@
@if(ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}
<h1>Crear Partida</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Partida" asp-action="Crear"  method="post">
            <div class="form-group">
                <label class="control-label"> Seleccione tipo</label>
                <select class="form-control" name="tipo">
                    <option value="1">Tiempo</option>
                    <option value="2">Largo</option> 
                    <!-- Agrega más opciones según sea necesario -->
                </select>
            </div>
            <div class="form-group">
                <label class="control-label"> Ingrese el largo o Tiempo</label>
                <input class="form-control" name="extension"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Tematica</label>
                <select class="form-control" name="tematica">
                    <option value="1">Estandar</option>
                    @* <option value="Opcion2">Opcion 2</option> *@
                    <!-- Agrega más opciones según sea necesario -->
                </select>
            </div>
            <div class="form-group">
                <label class="control-label"> Ingrese la cantidad de jugadores</label>
                <select class="form-control" name="cantidad">
                    @* del 2 al 15 *@
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Volver</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

